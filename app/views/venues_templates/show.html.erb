
  <div class="container mt-4">


    <div class="row mt-2 justify-content-md-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">
          <%= @venue.name %>

            <small class="text-muted">
                <%= Neighborhood.find(@venue.neighborhood_id).name %>
                
            </small>
        </h4>
      </div>

      <div class="card-body">
        <div id="location_map" style="height: 360px;"></div>
      </div>

      <ul class="list-group">
        <li class="list-group-item list-group-item-success">
          Dishes you loved here
        </li>
        
        <% Bookmark.where(user_id: current_user.id, venue_id: @venue.id).each do |bookmark| %>

          <li class="list-group-item">
            <p>
              <a href="/dishes/<%= bookmark.dish_id %>">
                <%= Dish.find(bookmark.dish_id).name %>
              </a>

              <small class="float-right text-muted">
                <%= time_ago_in_words(bookmark.created_at) %>

                <a href="/bookmarks/<%= bookmark.id %>/edit">
                  <i class="fa fa-fw fa-edit"></i>
                </a>

                <a href="/delete_bookmark/<%= bookmark.id %>">
                  <i class="fa fa-fw fa-trash-o"></i>
                </a>
              </small>
            </p>

          </li>
          
        <% end %>

        <li class="list-group-item">
          <form action="/create_bookmark" class="form-inline float-left" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="FfMNFKpk8g44kjr5xKGFesmgaJSv6KPdSckwV/h7a/zjoMOV39A65bCO8eqJcIJ9Me9bIfYBzXwIv/LmluPJ/Q==">


            <input type="hidden" name="venue_id" value="<%= @venue.id %>">
            <input type="hidden" name="user_id" value="<%= current_user.id %>">
            <input type="hidden" name="notes" value=" ">
            <!-- Label and input for dish_id -->
            <div class="form-group mr-sm-1">
              <label for="dish_id" class="control-label sr-only">
                Dish
              </label>

              <%= select_tag("dish_id", options_from_collection_for_select(Dish.all, :id, :name, @dish.try(:id)), :class => "form-control") %>
              
            </div>

            <button class="btn btn-primary btn">
              <i class="fa fa-heart"></i>
            </button>
          </form>
          <small class="float-right text-muted">
            right now
          </small>
        </li>

        <li class="list-group-item list-group-item-success">
          Popular dishes here
        </li>
          <% Bookmark.where(venue_id: @venue.id).group(:dish_id).each do |bookmark| %>
          <li class="list-group-item">
            <a href="/dishes/<%= bookmark.dish_id %>">
              <%= Dish.find(bookmark.dish_id).name %>
            </a>
          </li>
          <% end %>
      </ul>

      <div class="card-footer text-center">
        <a href="/venues" class="btn btn-block btn-secondary">
          <i class="fa fa-chevron-left"></i>
        </a>
      </div>
    </div>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": ,
        "lng": ,
        "infowindow": "<h5>2018-11-28 21:50:42 UTC</h5><small></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>

  </div>